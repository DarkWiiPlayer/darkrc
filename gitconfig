# vim: set filetype=gitconfig :miv #
[core]
	editor = vim -f
[diff]
	tool = vimdiff
  guitool = gvimdiff
[difftool]
	confirm = false
	prompt = true
[merge]
	tool = vimdiff
[push]
	default = matching
[alias]
  head = log -1 --show-signature --format=fuller
	adog = log --all --decorate --oneline --graph
	dog = log --decorate --oneline --graph
[commit]
	gpgSign = true
