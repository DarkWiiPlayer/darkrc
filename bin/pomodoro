#!/bin/sh

say() {
	if [ -n "$DISPLAY" ]; then
		notify-send "Pomodoro ğŸ…" "$1"
	fi
	echo "ğŸ… Pomodoro: $1"
}

while true
do
	for i in 1 2 3 4
	do
		say "Start working... ğŸ”¨"
		sleep $((60 * 25))
		if [ 4 -eq "$i" ]
		then
			say "Take a break... ğŸ’¤"
			sleep $((60 * 5))
		else
			say "Take a break... ğŸ’¤"
			sleep $((60 * 15))
		fi
	done
done
